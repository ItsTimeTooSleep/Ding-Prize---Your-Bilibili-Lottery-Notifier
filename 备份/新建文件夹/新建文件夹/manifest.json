{
  "manifest_version": 3,
  "name": "BiliPrize Alert",
  "version": "1.0",
  "description": "帮你盯紧海量私信，中奖通知一秒闪现！",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://api.vc.bilibili.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}